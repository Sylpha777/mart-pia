<div class="text-center">
  <h1 class="my-5">店舗新規登録</h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @store, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, '店舗名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :address, '住所' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :phone, '電話番号' %>
        <%= f.text_field :phone, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image, '画像' %>
        <%= f.text_field :image, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :business_hours, '営業時間' %>
        <%= f.text_field :business_hours, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :area, '配送可能エリア' %>
        <%= f.text_field :area, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :message, '店舗からのメッセージ' %>
        <%= f.text_area :message, class: 'form-control', rows: "10" %>
      </div>
      <%= f.submit '新規登録', class: 'btn btn-primary btn-block mt-5' %>
    <% end %>
  </div>
</div>

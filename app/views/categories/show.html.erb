<div class="text-center">
  <h1 class="my-5"><%= @store.name %></h1>
  <h1 class="my-5"><%= @category.name %></h1>
</div>
<div class="row mt-5">
  <% @items.each do |item| %>
    <div class="col-sm-3 text-center">
      <img class="rounded" src="<%= "/item_images/#{item.image}" %>" alt="商品画像" width="150" height="150">
      <p class="my-1"><%= link_to item.name, "/items/#{item.id}" %></p>
      <p class="my-1">¥<%= item.price %>(税込)</p>
      <span class="my-1">個数</span>
    </div>
  <% end %>
</div>
